<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CameraApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/buttonsOff</item>
         <item name="colorOnPrimary">@color/white</item>
         <item name="colorSecondary">@color/buttonsOn</item>
         <item name="colorOnSecondary">@color/black</item>
        <item name="radioButtonStyle">@style/Widget.AppCompat.CompoundButton.RadioButton</item>
    </style>


    <style name="Theme.CameraApp" parent="Base.Theme.CameraApp" />

    <style name="Settings">
        <item name="android:layout_width">319dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="minHeight">48dp</item>
        <item name="thumbTint">@color/switch_thumb_color_off</item>
        <item name="trackTint">@color/switch_track_color_off</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>