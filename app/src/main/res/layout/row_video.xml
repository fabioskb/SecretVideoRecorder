<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_layout"
    android:layout_width="@dimen/gallery_width"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/video_img_view"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_default_video_placeholder"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/delete_img_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/video_deleted"
            android:padding="16dp"
            android:src="@drawable/ic_delete"
            android:visibility="visible"
            app:tint="@color/buttonsOff" />
    </LinearLayout>

    <TextView
        android:id="@+id/video_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/app_name"
        android:textColor="@color/buttonsOff"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <View
        android:layout_width="@dimen/gallery_width"
        android:layout_height="1dp"
        android:background="@color/buttonsOff" />


</LinearLayout>