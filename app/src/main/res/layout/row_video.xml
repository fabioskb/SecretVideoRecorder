<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <ImageView
        android:id="@+id/video_img_view"
        android:layout_height="44dp"
        android:layout_width="44dp"
        android:contentDescription="@string/app_name"
        android:visibility="visible"
        android:src="@drawable/ic_default_video_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/video_text_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/video_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/app_name"
        android:textColor="@color/buttonsOff"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/video_img_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_img_view"/>

    <ImageView
        android:id="@+id/delete_img_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/video_deleted"
        app:layout_constraintStart_toEndOf="@id/video_text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/buttonsOff" />

</androidx.constraintlayout.widget.ConstraintLayout>